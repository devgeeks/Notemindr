{
  "name": "Notemindr",
  "version": "0.0.1",
  "description": "Notes app with reminders",
  "main": "src/app.js",
  "scripts": {
    "setup": "npm install && ./node_modules/.bin/bower install && npm run build-dev",
    "postinstall": "./node_modules/.bin/bower install",
    "setup-cordova": "./node_modules/.bin/cordova platform add android",
    "setup-global": "npm install -g browserify uglify-js watchify gulp jest-cli",
    "build": "npm run build-scripts && npm run build-styles",
    "build-scripts": "./node_modules/.bin/browserify src/app.js | ./node_modules/.bin/uglifyjs -cm --stats > www/js/notemindr.js",
    "build-styles": "gulp styles",
    "build-dev": "npm run build-scripts-dev && npm run build-styles-dev",
    "build-scripts-dev": "./node_modules/.bin/browserify src/app.js -o www/js/notemindr.js",
    "build-styles-dev": "gulp styles-dev",
    "start": "npm run build-dev && open www/index.html",
    "android": "./node_modules/.bin/cordova run android",
    "ios": "./node_modules/.bin/cordova run ios",
    "watch": "./node_modules/.bin/gulp watch",
    "tests": "./node_modules/.bin/gulp watch-tests",
    "test": "./node_modules/.bin/jest"
  },
  "devDependencies": {
    "bower": "^1.3.12",
    "browserify": "^7.0.0",
    "cordova": "^4.1.2",
    "envify": "~1.2.1",
    "es6-promise": "~1.0.0",
    "fastclick": "^1.0.3",
    "flux": "^2.0.1",
    "gulp": "^3.8.10",
    "gulp-autoprefixer": "0.0.8",
    "gulp-concat": "~2.2.0",
    "gulp-less": "^1.3.6",
    "gulp-minify-css": "~0.3.6",
    "gulp-shell": "~0.2.7",
    "jest-cli": "^0.4.0",
    "path": "^0.4.9",
    "react": "~0.12.0",
    "react-async": "^2.0.1",
    "react-router": "^0.11.6",
    "react-tools": "^0.12.1",
    "reactify": "^0.17.1",
    "timeout-transition-group": "0.0.2",
    "tinyvents": "^0.3.0",
    "uglify-js": "^2.4.15",
    "watchify": "^2.1.1"
  },
  "dependencies": {},
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "jest": {
    "testFileExtensions": [
      "js"
    ],
    "scriptPreprocessor": "<rootDir>/preprocessor.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/timeout-transition-group",
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-tools"
    ]
  }
}
