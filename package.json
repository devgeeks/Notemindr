{
  "name": "Notemindr",
  "version": "0.0.1",
  "description": "Notes app with reminders",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack && node server",
    "build-dev": "webpack --config webpack.dev.config.js",
    "build-mobile": "webpack --config webpack.mobiledev.config.js",
    "build-prod": "webpack -p --config webpack.prod.config.js",
    "test": "./node_modules/.bin/jest --verbose --coverage",
    "watch:test": "nodemon -w __tests__ -w ./src -e js -x npm test"
  },
  "author": "devgeeks <tommy@devgeeks.org> (http://devgeeks.org/)",
  "license": "MPLv2",
  "dependencies": {
    "classnames": "^2.1.3",
    "node-uuid": "^1.4.3",
    "offline-js": "^0.7.11",
    "r-dom": "^1.3.0",
    "react": "^0.13.3",
    "react-a11y": "^0.2.6",
    "react-redux": "^1.0.0",
    "react-router": "^1.0.0-beta3",
    "redux": "^1.0.1",
    "redux-thunk": "^0.1.0",
    "timeout-transition-group": "^1.0.3"
  },
  "devDependencies": {
    "autoprefixer-loader": "^2.0.0",
    "babel": "^5.8.21",
    "babel-core": "^5.8.20",
    "babel-jest": "^5.3.0",
    "babel-loader": "^5.3.2",
    "babel-runtime": "^5.8.20",
    "css-loader": "^0.15.6",
    "expect": "^1.9.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "jest": "^0.1.40",
    "jest-cli": "^0.5.0",
    "less-loader": "^2.2.0",
    "nodemon": "^1.4.1",
    "react-hot-loader": "^1.2.8",
    "react-tools": "^0.13.3",
    "redux-devtools": "^1.0.2",
    "sinon": "^1.16.1",
    "style-loader": "^0.12.3",
    "uglify-js": "^2.4.24",
    "webpack": "^1.10.5",
    "webpack-dev-server": "^1.10.1"
  },
  "jest": {
    "testFileExtensions": [
      "js"
    ],
    "scriptPreprocessor": "<rootDir>/jest-preprocessor",
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/timeout-transition-group",
      "<rootDir>/node_modules/expect",
      "<rootDir>/node_modules/classnames",
      "<rootDir>/node_modules/sinon",
      "<rootDir>/node_modules/redux",
      "<rootDir>/node_modules/redux-thunk",
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-tools",
      "<rootDir>/node_modules/react-devtools"
    ],
    "modulePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
